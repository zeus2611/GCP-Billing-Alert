{
    "@type": "MessageCard",
    "@context": "http://schema.org/extensions",
    "themeColor": "ff0000",
    "summary": "$condition_name",
    "sections": [
        {
            "activityTitle": "$condition_name",
            "activitySubtitle": "$summary",
            "facts": [
                {
                    "name": "Projects",
                    "value": " "
                },
                {
                    "name": "Services",
                    "value": " "
                }
            ],
            "markdown": true
        }
    ],
    "potentialAction": [
        {
            "@type": "OpenUri",
            "name": "View Billing",
            "targets": [
                {
                    "os": "default",
                    "uri": "$incident_url"
                }
            ]
        }
    ]
}